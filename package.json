{
  "name": "swagger-data-entry-app",
  "version": "0.1.2",
  "private": true,
  "description": "Swagger Data Entry App.",
  "main": "build/electron.bundle.js",
  "scripts": {
    "upgrade": "yarn-upgrade-all",
    "build": "node -r babel-register node_modules/.bin/webpack --progress --colors",
    "build:watch": "yarn build --watch",
    "release": "yarn build -p",
    "start": "electron .",
    "dist": "yarn release && rm -rf dist && electron-builder build --mac --win --publish always",
    "dist:dev": "rm -rf dist && electron-builder build --mac --win",
    "test": "standard && jest",
    "prepush": "yarn test"
  },
  "repository": "git@github.com:tylerlong/swagger-data-entry-app.git",
  "author": {
    "name": "Tyler Liu",
    "email": "tyler.liu@ringcentral.com"
  },
  "license": "All Rights Reserved",
  "dependencies": {
    "antd": "^3.2.0",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.20.1",
    "js-yaml": "^3.10.0",
    "mobx": "^3.5.1",
    "mobx-react": "^4.4.1",
    "mobx-state-tree": "^1.3.1",
    "pluralize": "^7.0.0",
    "ramda": "^0.25.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-import": "^1.6.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-ts-node4-bluebird": "^0.1.1",
    "css-loader": "^0.28.9",
    "electron": "^1.8.2",
    "electron-builder": "^19.56.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "husky": "^0.14.3",
    "jest": "^22.2.1",
    "standard": "^10.0.3",
    "style-loader": "^0.20.1",
    "webpack": "^3.10.0",
    "yarn-upgrade-all": "^0.3.0"
  },
  "build": {
    "appId": "swagger-data-entry-app.ringcentral.com",
    "productName": "Swagger Data Entry App",
    "files": [
      "build/index.html",
      "build/electron.bundle.js",
      "build/preload.bundle.js",
      "build/index.bundle.js",
      "build/index.bundle.css",
      "!node_modules${/*}"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 128,
          "y": 160
        },
        {
          "x": 384,
          "y": 160,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "compression": "maximum"
  },
  "jest": {
    "setupFiles": [
      "./test/polyfill.js",
      "./test/setup.js"
    ]
  }
}
